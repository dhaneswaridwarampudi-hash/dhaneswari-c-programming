//Program to find circumference of a circle.
#include <stdio.h>
int main()
{
    float radius;
    float circumference;
    const float PI = 3.14159; // using a more precise value for PI
    // Prompt the user to enter the radius
    printf("Enter the radius of the circle");
    // Read the radius entered by the user
    scanf("%f", &radius);
    // Calculate the circumference using the formula: 2*PI* radius
    circumference =2 * PI * radius;
    // desplay the calculated circumference
    printf("The circumference of the circle %.2f is: %.2f\n", circumference);
}
