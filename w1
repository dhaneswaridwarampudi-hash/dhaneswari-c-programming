//Program to swap two numbers without using third variable.
#include<stdio.h>
main()
{
	int a,b;
	printf("enter the numbers (a and b)");
	scanf("%d %d",&a,&b);
	printf("before swap a=%d,b=%d\n",a,b);
	a=a+b; //a now stores the sum of oruginol a and b
	b=a-b; //b now stores the oruginol value of a (sum-original b)
	a=a-b; //a now stores the oruginol value of b (sum-original a)
	printf("after swapping a=%d,b=%d\n",a,b);
}
